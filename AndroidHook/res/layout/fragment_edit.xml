<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

	<ScrollView
		android:layout_above="@+id/buttonSave"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="package name"/>

			<AutoCompleteTextView
				android:id="@+id/editPackageName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="class name"/>

			<AutoCompleteTextView
				android:id="@+id/editClassName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="method name"/>

			<AutoCompleteTextView
				android:id="@+id/editMethodName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="param type"/>

			<AutoCompleteTextView
				android:id="@+id/editParaType"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="return Type"/>

			<AutoCompleteTextView
				android:id="@+id/editReturnType"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>

	<Button
		android:id="@+id/buttonSave"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="save"/>
</RelativeLayout>
